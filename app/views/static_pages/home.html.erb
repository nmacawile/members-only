<% unless logged_in? %>
<div id="reminder" class="center jumbotron">
  <a href="" id="hide-reminder">[hide]</a>
  <h1>Welcome to <strong>Members Only!</strong></h1>
  <%= image_tag "cat-1333926_960_720.jpg", class: "poster" %>
  <h2>
    Click <%= link_to "here", "#" %> to log in. Not yet a member? Click the link below to register.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>

<div class="row">
  <aside class="col-md-2">
    
    <section class="user_info">
      <% if logged_in? %>
      <h1>
        <%= link_to gravatar_for(current_user), current_user %>
        <%= link_to current_user.name, current_user %>
      </h1>
      <% end %>
    </section>
  </aside>
    
  <div class="col-md-6">
    <ul class="posts">
      <%= form_for @new_post, url: posts_path do |f| %>
        <%= f.text_area :content, placeholder: "Got anything to share?" %>
        <%= f.submit "Post", class: 'btn btn-primary' %>
      <% end if logged_in? %>
      <%= render @posts %>
      <%= will_paginate @posts %>
    </ul>
  </div>
  
</div>