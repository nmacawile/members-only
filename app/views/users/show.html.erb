<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-6">
    <% if logged_in? %>
    <ul class="posts">
      <%= render @posts %>
      <%= will_paginate @posts %>
    </ul>
    <% end %>
  </div>
</div>